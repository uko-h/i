.background
  .header
    .header__title
      %h1#edit-title
        投稿の編集
  .post-edit
    .post-edit__wrapper
      = form_for(@post_info, url: user_category_post_path(current_user.id,@category)) do |f|
        .post-edit__form-image
          %label#edit-image
            %p 画像の変更
            = f.file_field :image, class: 'hidden'
        .post-edit__form-content
          %label
            %p 投稿内容
            = f.text_area :content, class: "", placeholder: @post_info.content
        =f.submit '変更', class: 'post-edit__btn'
        .delete
          = link_to "削除", user_category_post_path(@post_info),method: :delete, class:'post_delete'
    .return
      = link_to "TOP", root_path, class: 'btn'
      = link_to "戻る", user_category_posts_path(user_id:current_user.id,category_id:@category), class: 'return_page'
